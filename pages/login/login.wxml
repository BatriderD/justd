<!--login.wxml-->
<view class="container">
  <view class='login-title'>昭泰文化内部信息系统系统</view>
  <view class='login-sub-title'>集成化高效信息管理系统</view>
  <view class="login-from">
    <form onSubmit="formSubmit" >
      <!--账号-->
      <view class="inputView">
        <image class="nameImage input-icon" src="../images/name.png"></image>
        <label class="loginLab">账号</label>
            <input class="inputText" bindinput='listenerPhoneInput' placeholder="请输入登录账号" name="phone"/>
      </view>
      <!--密码-->
      <view class="inputView">
        <image class="keyImage input-icon" src="../images/key.png"></image>
        <label class="loginLab">密码</label>
            <input class="inputText" bindinput='listenerPasswordInput' password="true" placeholder="请输入密码" name="password"/>
      </view>
      <!--按钮-->
      <view class="loginBtnView">
        <button class="loginBtn" formType="submit" bindtap="loginBindTap">登录</button>
      </view>
    </form>
      <view class='forget-psd'>忘记密码?联系管理员→</view>
  </view>
</view>
